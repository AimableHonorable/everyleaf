<div class="bg-white">
<div class="float-right" >
<%= t('view.sample')%>
</div>




<h1 class="mt-4 text-center">Available tasks</h1>
<div class="row">
<div class=" col  px-5">
  <%= paginate @tasks %>
</div>
<div class=" col  form-inline my-2 my-lg-0"><%= search_form_for @search do |f| %>
  <div class="float-right">
    <%= f.text_field :title_cont, placeholder:"Search by title", class:"field form-control mr-sm-2"%>
    <%= f.text_field :status_cont, placeholder:"Search by status", class:"field form-control mr-sm-2" %> 
  <%= f.submit "Search", class:"btn btn-outline-info my-2 my-sm-0 p-2"%>
  </div>
<% end %>
</div>
</div>

<% @tasks.each do |task| %>
  <div class="mx-5 p-4 border rounded my-2 bg-light">
    <%= task.created_at.strftime("%Hh%M min %Y, %B, %d") %>
    <h5 class="my-2"> 
      <strong><%= task.title %></strong>
    </h5>
    <h6>This task is scheduled to start on <strong><%= task.start_at.strftime("%B, %d, %Y") %></strong> and it must end before <strong><%= task.end_at.strftime("%B, %d, %Y") %></strong><h6>
    <p class="mx-2 bg-white p-2">
      <%= task.content %>
    </p>
    <div class="row">
      
      <div class="col col-10">
        <button class="btn btn-outline-info"><%= link_to 'Show', task %></button>
        <button class="btn btn-outline-primary"><%= link_to 'Edit', edit_task_path(task) %></button>
        <button class="btn btn-outline-danger"><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></button>
      </div>
      <div class="col">
        <p> 
          <strong>Status: </strong>
          <%= task.status %><br>
          <strong>Priority:</strong>
          <%= task.priority %>
        </p>
      </div>
    </div>
  </div>
<% end %>
<div class="px-5"><%= paginate @tasks %></div>
</div>