<div class="mx-5 text-center">


<h1>labels</h1>
<table class = "table table-bordered w-75 mx-auto">
  <thead class="bg-dark text-light">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>

      <th colspan="3">More Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= label.content %></td>
        <td><%= label.user.firstname %></td>
        <td>
        <button class="btn btn-outline-info rounded-pill"><%= link_to 'Show', label %></button>
        <button class="btn btn-outline-warning rounded-pill"><%= link_to 'Edit', edit_label_path(label) %></button>
        <button class="btn btn-outline-danger rounded-pill"><%= link_to 'Destroy', label, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
